<div class="container">

    <h1>Lista de Productos con WebSocket</h1>

    <div class="form-container">
        <input type="text" placeholder="Ingrese el código" id="codigo" />
        <input
            type="text"
            placeholder="Ingrese el nombre del producto"
            id="titulo"
        />
        <input
            type="text"
            placeholder="Ingrese la descripción del producto"
            id="descripcion"
        />
        <input type="text" placeholder="Ingrese el precio" id="precio" />
        <input
            type="text"
            placeholder="Ingrese la cantidad de productos"
            id="cantidad"
        />
        <input type="text" placeholder="Ingrese la categoría" id="categoria" />

        <button id="btn-send">
            <span class="text enviar">Button</span>
        </button>
    </div>

    <div class="table-container">
        <table id="productos-lista">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Categoría</th>
                    <th>Imagen</th>
                    <th>Estado</th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td id="code">{{this.code}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>${{this.price}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.category}}</td>
                        <td>
                            {{#if this.thumbnails.length}}
                                <ul>
                                    {{#each this.thumbnails}}
                                        <li><img
                                                src="{{this}}"
                                                alt="Thumbnail"
                                            /></li>
                                    {{/each}}
                                </ul>
                            {{else}}
                                No Thumbnails
                            {{/if}}
                        </td>
                        <td>{{#if
                                this.status
                            }}Activo{{else}}Inactivo{{/if}}</td>
                        <td>
                            <button id="btn-delete" data-id={{this._id}}><span
                                    class="text"
                                >Delete</span><span class="icon"><svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                    ><path
                                            d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"
                                        ></path></svg></span></button>

                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/main.js"></script>